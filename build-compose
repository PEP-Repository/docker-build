# FROM docker:latest

# RUN apk add --no-cache --virtual .fetch-deps curl \
# 	&& curl -L --fail https://github.com/docker/compose/releases/download/1.16.1/run.sh -o /usr/local/bin/docker-compose \
# 	&& chmod +x /usr/local/bin/docker-compose \
# 	&& apk del .fetch-deps;

FROM debian:jessie

RUN apt-get update && apt-get install -y docker curl \
	&& curl -L https://github.com/docker/compose/releases/download/1.16.1/docker-compose-`uname -s`-`uname -m` -o /usr/local/bin/docker-compose \
	&& chmod +x /usr/local/bin/docker-compose